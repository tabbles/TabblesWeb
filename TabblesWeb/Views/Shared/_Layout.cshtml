@model BaseModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tabbles Web</title>

    @Scripts.Render("~/bundles/modernizr")


    @Scripts.Render("~/bundles/jquery")



    <script src="~/Scripts/underscore.min.js"></script>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    @*per jstree*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.2.1/themes/default/style.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.2.1/jstree.min.js"></script>

    @*il tema proton*@
    <link href="~/Scripts/jstree-theme-proton/dist/themes/proton/style.min.css" rel="stylesheet" />
    <script src="~/Scripts/jstree-theme-proton/dist/jstree.min.js"></script>
    <link href="~/Content/bootstrap-reboot.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>

    <script src="~/utils.js"></script>

    <script type="text/javascript">
        var prefissoWebApi = "@Utils.getBaseUrlDelSito(Request, Url)";
    </script>


    @Styles.Render("~/Content/css")
    @RenderSection("scripts", required: false)

</head>
<body>


    <div class="container-fluid">


        @if (Model.isLoggedIn())
        {
            <div class="row">
                <div class="col">

                    <ul class="nav nav-tabs">

                        <li class="nav-item margsopra">
                            <a class="nav-link @Model.str_maybe_tab_active(Tabs.MainPage)" href="@Url.Action("Index", "Home")">Main</a>

                        </li>



                        <li class="nav-item margsopra">
                            <a class="nav-link @Model.str_maybe_tab_active(Tabs.ControlPanel)" href="@Url.Action("Index", "ControlPanel")">Control Panel</a>

                        </li>





                        <li class="nav-item expand">
                        </li>


                        <li class="nav-item destraNav">
                            <div class="nav-link ">
                                <span class="nomeutente">@Model.nomeUtente &ndash; </span> <a class="linkEsci" href="@Url.Action("Logout", "Login")">Log out</a>
                            </div>
                        </li>



                    </ul>
                </div>
            </div>
        }


        @*<div class="row">
                <div class="col">
                    <a href="@Url.Action("Index", "ControlPanel")" class="btn btn-secondary">Control Panel</a>
                </div>
            </div>*@

    </div>

    <div class="container-fluid body-content">
        @RenderBody()

    </div>


</body>
</html>
